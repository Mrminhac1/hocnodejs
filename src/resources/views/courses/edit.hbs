<div class="mt-4">
    <h2 class="mb-3">Sữa khoá học</h2>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value = "{{course.name}}" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control"placeholder="description" name="description" id="description"> {{course.description}} </textarea>
        </div>
        <div class="form-group">
            <label for="videoId">video</label>
            <input type="text" class="form-control" value = "{{course.videoId}}" placeholder="Enter Description" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="text" class="form-control" value = "{{course.level}}" placeholder="Enter level" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
