<div class="mt-4">
    <h2 class="mb-3">Thêm khoá học</h2>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" placeholder="description" name="description" id="description">
        </div>
        <div class="form-group">
            <label for="videoId">video</label>
            <input type="text" class="form-control" placeholder="Enter Description" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="text" class="form-control" placeholder="Enter level" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Đăng khoá học</button>
    </form>
</div>
